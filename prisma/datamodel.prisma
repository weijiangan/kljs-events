type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  middleName: String
  email: String! @unique
  password: String!
  description: String
  socials: [SocialProfile!]!
}

type Event {
  id: ID! @id
  name: String!
  attendees: [User!]! @relation(name: "Attendees")
  organizer: User! @relation(name: "Organizer")
  agenda: [EventActivity!]!
  venue: Venue
  timeStart: Int
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type EventActivity {
  id: ID! @id
  order: Int!
  activity: Activity!
}

type Activity {
  id: ID! @id
  type: ActivityType!
  title: String!
  description: String!
  length: Int!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum ActivityType {
  TALK,
  BASIC
}

type Talk {
  id: ID! @id
  activity: Activity!
  speaker: User!
  remarks: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type SocialProfile {
  id: ID! @id
  type: SocialNetworks!
  value: String! @unique
}

enum SocialNetworks {
  FACEBOOK,
  TWITTER,
  GITHUB,
  LINKEDIN,
  PERSONAL
}

type Venue {
  id: ID! @id
  name: String!
  address: String!
  postcode: String!
  city: String!
  state: String!
  country: String!
  googPlaceId: String
  coords: Coordinates
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Coordinates {
  id: ID! @id
  x: Float!
  y: Float!
}
